---
import { onAuthStateChangedListener } from '../lib/auth';

let redirectUrl = '';

if (typeof window !== 'undefined') {
  await new Promise((resolve) => {
    onAuthStateChangedListener((user: any) => {
      if (user) {
        redirectUrl = '/home';
      } else {
        redirectUrl = '/login';
      }
      resolve(null);
    });
  });
}
